<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- línea inferior -->
        <item name="boxStrokeColor">@android:color/transparent</item>
        <!-- el color de relleno, (por defecto es colorOnSurface)-->
        <item name="boxBackgroundColor">?attr/colorPrimary</item>
        <!-- el hint cuando el campo está vacio y sin foco-->
        <item name="android:textColorHint">?attr/colorPrimaryVariant</item>
        <!-- el hint cuando se convierte en etiqueta flotante-->
        <item name="hintTextColor">?attr/colorOnSecondary</item>
    </style>

    <style name="circleImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="semiCircleImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>


</resources>