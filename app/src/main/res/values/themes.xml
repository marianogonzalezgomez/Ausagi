<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- White application theme. DEFAULT -->
    <style name="Theme.Ausagi_White" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/White_Light</item>
        <item name="colorPrimaryVariant">@color/White_Dark</item>
        <item name="colorOnPrimary">@color/black_wh</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/White_Main</item>
        <item name="colorSecondaryVariant">@color/White_Light</item>
        <item name="colorOnSecondary">@color/black_wh</item>
        <!-- Status bar color. -->
        <item name="statusBarColor" tools:targetApi="l">@color/White_Dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="titleTextColor">@color/White_Title</item>
</style>

